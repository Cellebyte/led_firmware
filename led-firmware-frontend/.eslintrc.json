{
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/airbnb",
      "@vue/typescript/recommended"
    ],
    "parser": "vue-eslint-parser",
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "parser": {
        "ts": "@typescript-eslint/parser",
        "<template>": "espree"
      },
      "sourceType": "module",
      "project": ["./tsconfig.json"],
      "extraFileExtensions": [".vue"]
    },

    "settings": {
        "import/extensions": [
            ".ts",
            ".tsx",
            ".vue"
        ],
        "import/resolver": {
            "node": {
              "extensions": [
                ".ts",
                ".tsx",
                ".vue"
              ]
            }
          }
    },
    "rules": {}
}